<idea-plugin>
    <id>com.truqu.intellijtqformat</id>
    <name>intellij-tqformat</name>
    <vendor>truqu</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.erlang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable parentId="tools" instance="com.truqu.intellijtqformat.MyConfigurable"
                             id="com.truqu.intellijtqformat.MyConfigurable" displayName="TQFormat"
                             nonDefaultProject="true"/>
    </extensions>
    <project-components>
        <component>
            <implementation-class>com.truqu.intellijtqformat.TqFormatOnSaveComponent</implementation-class>
        </component>
    </project-components>
    <actions>
        <action id="TQ.Format"
                class="com.truqu.intellijtqformat.TqFormatAction"
                text="Run tqformat on current file">
            <add-to-group group-id="CodeMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
